[alias]
    ; mnemonic for add
    a = add
    ; mnemonic for add all
    aa = add .

    ; show git aliases
    aliases = config --get-regexp alias

    amend = commit --amend

    ; mnemonic for branches
    b = branch --list
    bl = branch --list
    branches = branch --list

    ; mnemonic for commit
    c = commit

    ; mnemonic for checkout
    co = checkout

    ; mnemonic for diff
    d = diff

    ; mnemonic for diff all
    da = diff HEAD

    ; mnemonic for diff staged
    ds = diff --cached

    ; mnemonic for diff master...
    dm = diff master...

    dw = diff --word-diff

    ; Switch to a branch, creating it if necessary
    go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

    ic = icdiff

    ; Prettier logging
    lg = log --color --decorate --graph --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s%Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

    ; mnemonic for pull
    p = pull

    ; Pushes and sets up tracking to same named branch
    pu = push -u

    s = status -s
    st = status -sb

    ; For showing stashes
    sl = stash list
    stashes = stash list

    ; To unstage files, etc
    us = reset -q HEAD --
    unstage = reset -q HEAD --

    ; Properly handles mistypes like `git git diff`; etc
    git = !exec git

    ; Add an ignore file from gitignore.io; use something like `git ignore go`
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto

[color "diff"]
    meta = magenta bold
    commit = magenta bold
    frag = magenta bold
    old = red bold
    new = 46 bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = 46 bold
    newHighlight = 46 bold 22

[commit]
    ; gpgsign = true
    verbose = true

[core]
    excludesfile = ~/.gitignore
    editor = vim
    untrackedCache = true

[credential]
    helper = store

[diff]
    tool = vimdiff
    algorithm = histogram
    colorMoved = zebra

[github]
    user = svanburen

[include]
    path = ~/.gitconfig.local

[merge]
    tool = vimdiff
    ff = false

[pull]
    ff = true

[push]
    default = current

[init]
    ; templatedir = ~/.git_template

[hub]
    protocol = ssh

; For work SSO
[url "git@github.com:"]
    insteadOf = https://github.com/

[user]
    name = Stefan VanBuren
    email = vanburenstefan@gmail.com
