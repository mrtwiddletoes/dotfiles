[alias]
    a = add
    aa = add .

# show git aliases
    aliases = config --get-regexp alias

    amend = commit --amend

    bl = branch --list
    branches = branch --list

    c = commit

    co = checkout

    d = diff

# mnemonic for diff all
    da = diff HEAD

# mnemonic for diff staged
    ds = diff --cached

    dw = diff --word-diff

# Switch to a branch, creating it if necessary
    go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

    ic = icdiff

    lg = log --color --decorate --graph --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s%Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --

    p = pull

    s = status -s
    sl = stash list
    st = status -sb

    stashes = stash list

    unstage = reset -q HEAD --
    us = reset -q HEAD --
    git = !exec git
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto

[color "diff"]
    meta = magenta bold
    commit = magenta bold
    frag = magenta bold
    old = red bold
    new = 46 bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = 46 bold
    newHighlight = 46 bold 22

[commit]
    ; gpgsign = true
    verbose = true

[core]
    excludesfile = ~/.gitignore
    editor = vim
    untrackedCache = true

[credential]
    helper = store

[diff]
    tool = vimdiff

