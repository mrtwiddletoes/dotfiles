[alias]
    lg = log --color --decorate --graph --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s%Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    po = push -u origin
    pu = pull -u origin
    st = status -sb
    co = checkout
    branches = branch --list
    ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
    unstage = reset -q HEAD --
    amend = commit --amend
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = auto
[commit]
    gpgsign = true
    verbose = true
[core]
    excludesfile = ~/.gitignore
    editor = nvim
[credential]
    helper = store
[diff]
    tool = icdiff
[github]
    user = svanburen
[include]
    path = ~/.gitconfig.local
[init]
    templatedir = ~/.git_template
[push]
    default = simple
[merge]
    tool = nvim -d
